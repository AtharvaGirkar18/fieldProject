<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= __("Lecture Details") %></title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body
    class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-indigo-50 py-8 px-4"
  >
    <div class="max-w-3xl mx-auto">
      <!-- Header Card -->
      <div
        class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 mb-6"
      >
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold text-gray-800 mb-2">
              <%= __("enterDetailsTitle") %>
            </h1>
            <p class="text-gray-600">
              <%= __("loggedInAs") %>:
              <span class="font-semibold text-blue-600"><%= username %></span>
            </p>
          </div>
          <div class="flex-shrink-0">
            <img
              src="<%= path %>"
              alt="<%= __("profilePicAlt") %>"
              class="w-20 h-20 rounded-full border-4 border-blue-100 shadow-md object-cover"
            />
          </div>
        </div>
      </div>

      <!-- Form Card -->
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8">
        <form
          action="/teacher/lecture"
          method="POST"
          enctype="multipart/form-data"
          class="space-y-6"
        >
          <!-- Date and Time -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label
                for="date"
                class="block text-sm font-semibold text-gray-700 mb-2"
              >
                <span class="flex items-center gap-2">
                  <svg
                    class="w-5 h-5 text-blue-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                    ></path>
                  </svg>
                  <%= __("date") %>
                </span>
              </label>
              <input
                type="date"
                id="date"
                name="date"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
              />
            </div>
            <div>
              <label
                for="time"
                class="block text-sm font-semibold text-gray-700 mb-2"
              >
                <span class="flex items-center gap-2">
                  <svg
                    class="w-5 h-5 text-blue-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                    ></path>
                  </svg>
                  <%= __("time") %>
                </span>
              </label>
              <input
                type="time"
                id="time"
                name="time"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
              />
            </div>
          </div>

          <!-- Address -->
          <div>
            <label
              for="address"
              class="block text-sm font-semibold text-gray-700 mb-2"
            >
              <span class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 text-blue-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                  ></path>
                </svg>
                <%= __("address") %>
              </span>
            </label>
            <input
              type="text"
              id="address"
              name="address"
              placeholder="<%= __("addressPlaceholder") %>"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
            />
          </div>

          <!-- Students Checklist -->
          <div class="border border-gray-200 rounded-xl p-4">
            <div class="flex items-center justify-between mb-3">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 10a2 2 0 11-4 0 2 2 0 014 0zm6 0a2 2 0 11-4 0 2 2 0 014 0zm6 0a2 2 0 11-4 0 2 2 0 014 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 18h4m6 0h4" />
                </svg>
                <p class="text-sm font-semibold text-gray-800">Student Attendance</p>
              </div>
              <span class="text-xs text-gray-500"><%= students && students.length ? students.length : 0 %> students</span>
            </div>
            <% if (students && students.length) { %>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                <% students.forEach((student) => { %>
                  <label class="flex items-center gap-3 p-3 border border-gray-200 rounded-lg hover:border-blue-200 hover:bg-blue-50">
                    <input
                      type="checkbox"
                      name="studentAttendance"
                      value="<%= student._id %>"
                      class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                    />
                    <span class="text-sm text-gray-800"><%= student.name %></span>
                  </label>
                <% }) %>
              </div>
              <div class="mt-4 p-3 bg-blue-50 rounded-lg border border-blue-100">
                <div class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  </svg>
                  <span class="text-sm font-semibold text-gray-700">No. of Students Present:</span>
                  <span id="studentCount" class="text-lg font-bold text-blue-600">0</span>
                </div>
              </div>
            <% } else { %>
              <p class="text-sm text-gray-500">No students yet. Add students from your home page.</p>
            <% } %>
            <input type="hidden" id="attendance" name="attendance" value="0" />
          </div>

          <!-- Activity -->
          <div>
            <label
              for="activity"
              class="block text-sm font-semibold text-gray-700 mb-2"
            >
              <span class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 text-blue-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                  ></path>
                </svg>
                <%= __("activity") %>
              </span>
            </label>
            <textarea
              id="activity"
              name="activity"
              placeholder="<%= __("Enter the activities performed today") %>"
              rows="4"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition resize-none"
            ></textarea>
          </div>

          <!-- Images -->
          <div>
            <label
              for="images"
              class="block text-sm font-semibold text-gray-700 mb-2"
            >
              <span class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 text-blue-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                  ></path>
                </svg>
                <%= __("Images") %>
                <span class="text-xs font-normal text-gray-500"
                  >(Max 5 images)</span
                >
              </span>
            </label>
            <div class="relative">
              <input
                type="file"
                id="images"
                name="images"
                multiple
                accept="image/*"
                required
                onchange="handleFileSelect(this)"
                class="w-full px-4 py-3 border-2 border-dashed border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 transition file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-blue-50 file:text-blue-700 file:font-semibold hover:file:bg-blue-100"
              />
            </div>
            <div id="selectedFiles" class="mt-3 space-y-2"></div>
          </div>

          <!-- Submit Button -->
          <div class="pt-4">
            <button
              type="submit"
              class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold py-3.5 rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition duration-200 focus:ring-4 focus:ring-blue-300"
            >
              <%= __("Submit Lecture Details") %>
            </button>
          </div>
        </form>
      </div>
    </div>

    <script>
      function handleFileSelect(input) {
        const selectedFiles = input.files;
        const selectedFilesContainer = document.getElementById("selectedFiles");
        selectedFilesContainer.innerHTML = "";

        if (selectedFiles.length > 5) {
          alert("You can only upload up to 5 images");
          input.value = "";
          return;
        }

        for (let i = 0; i < selectedFiles.length; i++) {
          const file = selectedFiles[i];
          const fileElement = document.createElement("div");
          fileElement.className =
            "flex items-center gap-3 p-3 bg-blue-50 border border-blue-200 rounded-lg";
          fileElement.innerHTML = `
          <div class="flex-shrink-0">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-medium text-gray-900 truncate">${
              file.name
            }</p>
            <p class="text-xs text-gray-500">${(file.size / 1024).toFixed(
              2
            )} KB</p>
          </div>
          <div class="flex-shrink-0">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              Ready
            </span>
          </div>
        `;
          selectedFilesContainer.appendChild(fileElement);
        }
      }

      // Update student attendance count dynamically
      const studentCheckboxes = document.querySelectorAll('input[name="studentAttendance"]');
      const studentCountDisplay = document.getElementById('studentCount');
      const attendanceInput = document.getElementById('attendance');

      function updateStudentCount() {
        const checkedCount = document.querySelectorAll('input[name="studentAttendance"]:checked').length;
        if (studentCountDisplay) {
          studentCountDisplay.textContent = checkedCount;
        }
        if (attendanceInput) {
          attendanceInput.value = checkedCount;
        }
      }

      // Add event listeners to all student checkboxes
      studentCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', updateStudentCount);
      });

      // Initialize the count on page load
      updateStudentCount();
    </script>
  </body>
</html>
